<GameObject tag="platform">
	<Render>
		<Rect x="0.0" y="0.0" halfWidth="0.5" halfHeight="5.0">
			<FillColor r="0" g="255" b="0" a="255"/>
			<StrokeColor r="0" g="255" b="0" a="255"/>
		</Rect>
		<Sprite>
			<SpriteSheet src="block.png" alphaImage=""
				x="0.0" y="0.0"  
				horzCount="1" vertCount="1" farmeFreq="0.0f"
				zOrder="0" height="120.0" scaleHeight="10"> 
			</SpriteSheet> 
		</Sprite> 
	</Render>
	
	<RigidBody
		type="kinematic"
		linearDamping="0.0"
		angularDamping="0.0"
		gravityScale="0.0"
		allowSleep="true"
		awake="false"
		fixedRotation="true"
		bullet="false"
		active="true"
	>
		<Fixture
			density="1.0"
			friction="0.4"
			restitution="0.3"
			isSensor="false"
		>
			<Shape type="box" halfWidth="0.5" halfHeight="5.0"/>
		</Fixture>
	</RigidBody>
</GameObject>