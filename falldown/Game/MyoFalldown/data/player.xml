<GameObject tag="player">
	<Render>
		<Ellipse x="0.0" y="0.0" halfWidth="10.0" halfHeight="10.0">
			<FillColor r="255" g="0" b="0" a="255"/>
			<StrokeColor r="255" g="0" b="0" a="255"/>
		</Ellipse>
		<Text
			string="hello"
			fontName="Andy Bold" 
			size="20"
			antialiasing="true"
			alignX="center"
			alignY="baseline"
			x="0.0"
			y="0.0"
		>
			<FillColor r="0" g="0" b="0" a="255"/>
			<StrokeColor r="0" g="0" b="0" a="255"/>
		</Text>
	</Render>
	
	<RigidBody
		type="dynamic"
		linearDamping="0.0"
		angularDamping="0.01"
		gravityScale="4.0"
		allowSleep="false"
		awake="true"
		fixedRotation="true"
		bullet="false"
		active="true"
	>
		<Fixture
			density="0.12"
			friction="0.6"
			restitution="0.4"
			isSensor="false"
		>
			<Shape type="circle" x="0.0" y="0.0" radius="10.0"/>
		</Fixture>
	</RigidBody>
	
	<PlayerController acceleration="10.0" maxSpeed="200.0" jumpForce="5.0"/>
</GameObject>